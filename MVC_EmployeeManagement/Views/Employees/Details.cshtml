@model MVC_EmployeeManagement.Model.Employee

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var photoPath = "~/images/" + (Model.PhotoPath ?? "noimage.jpg");
}

<h2>Details</h2>



<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">
                <h1>@Model.FirstName</h1>
            </div>
            <div class="card-body text-center">

                <img class="card-img-top" src="@photoPath" asp-append-version="true" />
                <h4>FirstName : @Model.FirstName</h4>
                <h4>LastName : @Model.LastName</h4>
            </div>

            <div class="card-footer text-center">
                <a asp-controller="Employees" asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
                <a asp-controller="Employees"  asp-action="Index">Back to List</a>
                <a asp-controller="Employees" asp-action="Delete" asp-route-id="@Model.Id">Delete</a>
            </div>
        </div>
    </div>

</div>


